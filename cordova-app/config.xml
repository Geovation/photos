<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="6" id="uk.geovation.photos" version="1.0.6" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Geovation Photos</name>
    <description>
        Framework to create geotagged photos upload apps.
    </description>
    <author email="geovation@geovation.uk" href="http://geovation.uk/">Geovation</author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-geolocation" spec="^4.0.1" />
    <plugin name="cordova-plugin-camera" spec="~4.0.3" />
    <engine name="android" spec="^7.0.0" />
</widget>
